{% extends 'base.html.twig' %}

{% block title %}Pet List - HLL DocuPet{% endblock %}

{% block body %}
<div class="px-4 sm:px-0">
    <div class="mx-auto max-w-7xl">
        <!-- Header -->
        <div class="sm:flex sm:items-center sm:justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
                    Registered Pets
                </h1>
                <p class="mt-2 text-lg text-gray-600">
                    A list of all registered pets in the system
                </p>
            </div>
            <div class="mt-4 sm:mt-0">
                <a href="{{ path('pet_register') }}" class="btn btn-primary">
                    Register New Pet
                </a>
            </div>
        </div>

        {% if pets|length > 0 %}
            <!-- Pet Cards Grid -->
            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
                {% for pet in pets %}
                    <div class="bg-white overflow-hidden shadow-sm ring-1 ring-gray-900/5 rounded-xl">
                        <!-- Card Header -->
                        <div class="px-6 py-4 border-b border-gray-200">
                            <div class="flex items-center justify-between">
                                <h3 class="text-lg font-semibold text-gray-900">{{ pet.name }}</h3>
                                {% if pet.isDangerousAnimal %}
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                                        </svg>
                                        Dangerous
                                    </span>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Card Body -->
                        <div class="px-6 py-4">
                            <dl class="space-y-3">
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">Type</dt>
                                    <dd class="text-sm text-gray-900">{{ pet.type.name }}</dd>
                                </div>
                                
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">Breed</dt>
                                    <dd class="text-sm text-gray-900">
                                        {% if pet.breedName %}
                                            {{ pet.breedName }}
                                        {% else %}
                                            <span class="text-gray-500">Not specified</span>
                                        {% endif %}
                                    </dd>
                                </div>
                                
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">Age</dt>
                                    <dd class="text-sm text-gray-900">
                                        {% if pet.age %}
                                            {{ pet.age }} year{{ pet.age != 1 ? 's' : '' }} old
                                        {% else %}
                                            <span class="text-gray-500">Not specified</span>
                                        {% endif %}
                                    </dd>
                                </div>
                                
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">Sex</dt>
                                    <dd class="text-sm text-gray-900 capitalize">{{ pet.sex }}</dd>
                                </div>
                                
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">Registered</dt>
                                    <dd class="text-sm text-gray-900">{{ pet.createdAt|date('M j, Y') }}</dd>
                                </div>
                            </dl>
                        </div>

                        <!-- Card Footer -->
                        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
                            <a href="{{ path('pet_summary', {id: pet.id}) }}" 
                               class="text-sm font-medium text-primary-600 hover:text-primary-500">
                                View Details â†’
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Summary Stats -->
            <div class="mt-12 bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Registration Summary</h3>
                <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
                    <div class="text-center">
                        <div class="text-2xl font-bold text-primary-600">{{ pets|length }}</div>
                        <div class="text-sm text-gray-500">Total Pets</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-green-600">
                            {{ pets|filter(pet => not pet.isDangerousAnimal)|length }}
                        </div>
                        <div class="text-sm text-gray-500">Safe Pets</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-red-600">
                            {{ pets|filter(pet => pet.isDangerousAnimal)|length }}
                        </div>
                        <div class="text-sm text-gray-500">Dangerous Animals</div>
                    </div>
                </div>
            </div>
        {% else %}
            <!-- Empty State -->
            <div class="text-center py-12">
                <div class="mx-auto max-w-md">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                    <h3 class="mt-4 text-lg font-medium text-gray-900">No pets registered yet</h3>
                    <p class="mt-2 text-sm text-gray-500">
                        Get started by registering your first pet.
                    </p>
                    <div class="mt-6">
                        <a href="{{ path('pet_register') }}" class="btn btn-primary">
                            Register Your First Pet
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
